<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Canvas>
        <ToolBarTray Orientation="Horizontal"
    Canvas.Left="0" Canvas.Top="0">
            <ToolBar>
            <Menu>
                <MenuItem Header="_File">
                    <MenuItem Header="_Open" />
                        <MenuItem Header="_Close" >
                        <MenuItem Header="_Now"/>
                        <MenuItem Header="_Later"/>
                    </MenuItem>
                </MenuItem>
                <MenuItem Header="_Edit">
                    <MenuItem Command="ApplicationCommands.Copy" />
                    <MenuItem Command="ApplicationCommands.Paste" />
                </MenuItem>
                </Menu>
            </ToolBar>
            <ToolBar Header="Alpha" Band="1">
                <Button>button 1</Button>
                <Button>button 2</Button>
            </ToolBar>
            <ToolBar Header="Bravo" Band="1">
                <Button>button 3</Button>
                <Button>button 4</Button>
            </ToolBar>
        </ToolBarTray>
        
        <!-- Clicking MyButton will call the "MyButton_Click_1" method in your code -->
        <Button Name="MyButton" Click="MyButton_Click_1"
    Canvas.Top="60" Canvas.Left="10">Click Me</Button>

        <!-- The button will intially be toggled or "pressed down" -->
        <ToggleButton IsChecked="True"
    Canvas.Top="90" Canvas.Left="10">Toggle Me</ToggleButton>

        <CheckBox IsChecked="True"
    Canvas.Top="130" Canvas.Left="10">Check Me 1</CheckBox>

        <!-- Shows the indeterminate state; a grey check -->
        <CheckBox IsChecked="{x:Null}"
    Canvas.Top="130" Canvas.Left="110">Check Me 2</CheckBox>

        <RadioButton IsChecked="False"
    Canvas.Top="60" Canvas.Left="80">Yes</RadioButton>

        <RadioButton IsChecked="True"
    Canvas.Top="90" Canvas.Left="80">No</RadioButton>

        <TextBox Canvas.Top="60" Canvas.Left="200">standard text input</TextBox>
        <PasswordBox Canvas.Top="90" Canvas.Left="200" Password="secret" />
        <Label Name="Label1" Canvas.Top="130" Canvas.Left="200">basic read-only text</Label>
        <RichTextBox Width="180" Height="50" Canvas.Top="170" Canvas.Left="10">
            <FlowDocument>
                <Paragraph>
            RichTextBox
                    </Paragraph>
            </FlowDocument>
        </RichTextBox>

        <ProgressBar Width="170" Height="20" 
    Value="70" Maximum="100"
    Canvas.Left="200" Canvas.Top="170" />

        <Slider Width="170" Value="70" Maximum="100"
    Canvas.Left="200" Canvas.Top="200" TickPlacement="BottomRight" TickFrequency="10" ValueChanged="Slider_ValueChanged" />
    </Canvas>
</Window>
